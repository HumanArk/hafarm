#!/bin/bash
#SBATCH --array=1-1:1
#SBATCH --nice=500
#SBATCH -N 1
#SBATCH -n 1
#SBATCH --requeue
#SBATCH --tmp=32768
#SBATCH -p 3d

HAFARM_VERSION=2.0.0
LAST_FRAME=1
RANGE_FRAME=$[${SLURM_ARRAY_TASK_ID}+1]
if ((${RANGE_FRAME}>${LAST_FRAME})); then RANGE_FRAME=${LAST_FRAME}; fi

OUTPUT_PICTURE="/tmp/test1.exr"
echo Job start: `date`
echo Machine name: ${HOSTNAME}
echo User    name: ${USER}
echo Slots:        $NSLOTS
echo Memory stats: `egrep 'Mem|Cache|Swap' /proc/meminfo`
echo Scene file  : /tmp/test1

ffmpeg /tmp/test1 /tmp/test1.exr
exit_code=$?

echo Render ends: `date`
echo Render target: "/tmp/test1.exr"
echo Command was: ffmpeg /tmp/test1 /tmp/test1.exr
exit $exit_code